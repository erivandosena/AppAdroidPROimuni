<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base do aplicativo. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Personalizações do tema aqui. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema PROimuni -->
    <style name="AppTheme.Proimuni" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Personalizações do tema aqui. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Outras Personalizações do tema aqui. -->
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_seta_voltar</item>
         <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>  -->
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/montserrat/Montserrat-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/montserrat/Montserrat-Bold.ttf</item>
    </style>

    <style name="TextStyle.Titulo.Lista" parent="TextStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.TituloMedio.Lista" parent="TextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.SubTitulo.Lista" parent="TextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Titulo.Texto" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorGray</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.Paragrafo.Texto" parent="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorGray</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.TextView.Label" parent="TextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorGray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">-2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.TextInputEdit.Texto" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColorHint">@color/colorGrayLight</item>
        <item name="android:background">@drawable/round_border_text_input</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.TextView.Texto.Toggle" parent="TextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Spinner.DropDown" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:background">@drawable/round_border_spinner_dropdown</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="Button.Padrao" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/botao_padrao</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/colorWhite</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="Button.Menu" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

    <style name="TextStyle.Menu" parent="TextStyle">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.EditText" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_primary_bg</item>
    </style>

    <style name="Button.Primary.Quiz.Empty" parent="Button.Primary">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_primary_bg</item>
    </style>

    <style name="Button.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/montserrat/Montserrat-Light.ttf</item>
    </style>

    <style name="TextStyle.Title.Sub" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="TextStyle.EditText.Normal" parent="TextStyle.EditText">
        <item name="fontPath">fonts/montserrat/Montserrat-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_edit</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:maxLength">35</item>
    </style>

    <!-- Animacoes de telas -->
    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>
</resources>
