<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="@dimen/card_radius"
        card_view:cardCornerRadius="@dimen/card_radius"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <br.com.erivando.vacinaskids.custom.imagem.RoundedImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/text_crianca_tit_vacina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/image"
                android:paddingStart="5dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/image"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/text_sub_titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_crianca_tit_vacina"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/image"
                android:paddingStart="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/image"
                android:paddingLeft="5dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
