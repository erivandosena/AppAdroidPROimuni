<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_vacina"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/colorGrayLight"
        android:layout_margin="@dimen/card_margin"
        card_view:cardCornerRadius="@dimen/card_menu_radius"
        card_view:cardElevation="@dimen/card_menu_elevation"
        card_view:cardMaxElevation="@dimen/card_menu_elevation"
        card_view:contentPadding="@dimen/card_menu_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/nome_vacina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@null"
                android:textColor="@color/colorWhite"
                android:theme="@style/TextStyle.Titulo.Lista" />

            <TextView
                android:id="@+id/descricao_vacina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/nome_vacina"
                android:layout_marginTop="5dp"
                android:text="@null"
                android:textColor="@color/colorWhite"
                android:paddingRight="20dp"
                android:theme="@style/TextStyle.SubTitulo.Lista" />

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="-20dp"
                android:background="@color/colorTransparent"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                card_view:srcCompat="@drawable/ic_plus" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
