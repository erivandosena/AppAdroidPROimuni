<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/appbar_toobar_height"
    android:background="@drawable/background_gradient_appbar"
    android:gravity="bottom|start"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btn_nav_voltar"
        style="@style/Button.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_seta_voltar" />

    <TextView
        android:id="@+id/text_titulo_toobar"
        style="@style/Toolbar.TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/appbar_text_margin"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite" />

</LinearLayout>