<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_cartao_vacina"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@color/colorGrayLight"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/text_vacina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:theme="@style/TextStyle.Titulo.Lista" />

        <TextView
            android:id="@+id/text_idade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_vacina"
            android:text="@null"
            android:textColor="@color/colorWhite"
            android:theme="@style/TextStyle.SubTitulo.Lista" />

        <TextView
            android:id="@+id/text_dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_idade"
            android:paddingRight="10dp"
            android:paddingLeft="0dp"
            android:text="@null"
            android:textColor="@color/colorWhite"
            android:theme="@style/TextStyle.SubTitulo.Lista" />

        <TextView
            android:id="@+id/text_status"
            style="@style/TextAppearance.Text.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_idade"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/text_dose"
            android:layout_toRightOf="@+id/text_dose"
            android:text="null"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:theme="@style/TextStyle.SubTitulo.Lista" />

        <!--
        <TextView
            android:id="@+id/text_rede"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_idade"
            android:text="@null"
            android:textColor="@color/colorWhite"
            android:theme="@style/TextStyle.SubTitulo.Lista" />
            -->

    </RelativeLayout>
</android.support.v7.widget.CardView>