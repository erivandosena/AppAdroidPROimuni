<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imagem_vacina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_vacina" />

        <TextView
            android:id="@+id/text_vacina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imagem_vacina"
            android:layout_toEndOf="@+id/imagem_vacina"
            android:text="@null"
            android:theme="@style/TextStyle.Heading"
            android:layout_toRightOf="@+id/imagem_vacina" />

        <TextView
            android:id="@+id/text_dose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_vacina"
            android:layout_toEndOf="@+id/imagem_vacina"
            android:text="@null"
            android:layout_toRightOf="@+id/imagem_vacina" />

        <TextView
            android:id="@+id/text_idade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_dose"
            android:layout_toEndOf="@+id/imagem_vacina"
            android:text="@null"
            android:layout_toRightOf="@+id/imagem_vacina" />

        <TextView
            android:id="@+id/text_rede"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_idade"
            android:layout_toEndOf="@+id/imagem_vacina"
            android:text="@null"
            android:layout_toRightOf="@+id/imagem_vacina" />

    </RelativeLayout>
</android.support.v7.widget.CardView>