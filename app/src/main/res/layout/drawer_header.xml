<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_toobar"
    android:orientation="vertical"
    android:padding="16dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_imagem_perfil"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_round"
        app:riv_border_color="@color/colorWhite"
        app:riv_mutate_background="true"
        app:riv_corner_radius="0dip"
        app:riv_oval="true"
        app:riv_tile_mode="clamp" />

    <TextView
        android:id="@+id/text_nome_perfil"
        style="@style/TextStyle.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="@string/perfil_nome" />

    <TextView
        android:id="@+id/text_email_perfil"
        style="@style/TextStyle.Title.Sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textStyle="normal"
        android:text="@string/perfil_email" />

    <ImageButton
        android:id="@+id/btn_drawer_close"
        style="@style/Button.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="-150dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_seta_voltar" />

</LinearLayout>