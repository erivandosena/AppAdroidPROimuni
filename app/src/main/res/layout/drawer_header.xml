<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/bg_design"
    android:orientation="vertical"
    android:padding="16dp">

    <br.com.erivando.proimuni.imagem.RoundedImageView
        android:id="@+id/img_imagem_perfil"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_round" />

    <TextView
        android:id="@+id/text_nome_perfil"
        style="@style/TextStyle.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/perfil_nome" />

    <TextView
        android:id="@+id/text_email_perfil"
        style="@style/TextStyle.Title.Sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/perfil_email" />

</LinearLayout>